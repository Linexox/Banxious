.message-container {
  display: flex;
  margin-bottom: 16rpx; /* Reduced margin */
  padding: 0 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.message-container.user {
  justify-content: flex-end; /* Align right */
}

.message-container.assistant {
  justify-content: flex-start; /* Align left */
}

.content {
  max-width: 70%;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  line-height: 1.5;
  position: relative;
  word-wrap: break-word;
}

/* User Bubble (Dark/Green, Right) */
.user .content {
  background-color: #4CAF50; /* Match User Cat Color */
  color: #fff;
  border-radius: 20rpx 20rpx 4rpx 20rpx; /* Bottom-right corner sharp */
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

/* AI Bubble (Light/White, Left) */
.assistant .content {
  background-color: #FFF;
  color: #333;
  border-radius: 20rpx 20rpx 20rpx 4rpx; /* Bottom-left corner sharp */
  border: 1rpx solid #eee;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.bold-text {
  font-weight: bold;
  color: #000;
}

.line-break {
  height: 10rpx; /* Small spacing between paragraphs */
  width: 100%;
}
