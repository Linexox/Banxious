/** index.wxss **/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  box-sizing: border-box;
  background-color: #E8F5E9; /* Light green background to match image */
  position: relative;
}

.header {
  position: absolute;
  top: 15%; /* Approx position based on image */
  width: 100%;
  text-align: center;
}

.title {
  font-size: 140rpx; 
  width: 75%; 
  margin: 0 auto; 
  line-height: 1.2; 
  font-weight: normal; /* Removed bold to prevent stroke overlap on thick font */
  color: #2E7D32; 
  letter-spacing: 10rpx; /* Increased spacing to reduce crowding */
  font-family: 'XiangJiaoFont';
}

.cats-container {
  display: flex;
  flex-direction: row;
  justify-content: center; /* Center align */
  align-items: center; /* Center align */
  width: 100%;
  padding: 0;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.cat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: transform 0.2s;
  position: relative;
}

/* Adjust stacking order and position for 3 cats */
/* Middle cat should be in front and slightly lower/larger if needed, but image shows them side-by-side */
/* Actually, image shows middle cat slightly forward/larger perspective. */

.cat-item:nth-child(1) {
    z-index: 1;
    transform: scale(0.9) translateX(40rpx); /* Left cat, slightly back and right-shifted to overlap */
}

.cat-item:nth-child(2) {
    z-index: 2;
    transform: scale(1.1) translateY(20rpx); /* Middle cat, largest and lowest */
}

.cat-item:nth-child(3) {
    z-index: 1;
    transform: scale(0.9) translateX(-40rpx); /* Right cat, slightly back and left-shifted to overlap */
}

.cat-item.active {
    /* Override transform on active if needed, or disable scale effect on click to keep layout */
}

.cat-placeholder {
  width: 280rpx; /* Larger */
  height: 360rpx; /* Taller for full body */
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: transparent;
  box-shadow: none; /* Remove shadow box */
}

.cat-image {
  width: 100%;
  height: 100%;
  display: block;
}

.footer {
  position: absolute;
  bottom: 25%; /* Approx position based on image */
  width: 100%;
  text-align: center;
}

.hint-text {
  font-size: 36rpx; 
  color: #2E7D32; 
  font-weight: normal; /* Removed weight to keep font details clear */
  letter-spacing: 4rpx;
  font-family: 'XiangJiaoFont';
}

/* Walking Cat Animation */
.walking-cat-container {
  position: fixed;
  width: 200rpx;
  height: 200rpx;
  z-index: 999;
  transition: all 1s ease-in-out; /* Smooth transition for position and scale */
  pointer-events: none;
  /* Start centered to the container if no pos set, but we set pos inline */
}

.walking-cat-image {
  width: 100%;
  height: 100%;
}
