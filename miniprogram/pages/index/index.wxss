page {
  background-color: #FFFDF5; /* Day Mode Background */
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  padding: 100rpx 40rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
}

.title {
  font-size: 60rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #666;
}

.machine-wrapper {
  margin-top: 50rpx;
}

.start-btn {
  background-color: #B8E986; /* Day Mode Accent */
  color: #333;
  border-radius: 50rpx;
  padding: 20rpx 80rpx;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 20rpx rgba(184, 233, 134, 0.4);
}
