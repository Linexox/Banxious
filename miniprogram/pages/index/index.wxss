/** index.wxss **/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
  height: 100vh;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.header {
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.cats-container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  padding: 0 40rpx;
}

.cat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: transform 0.2s;
}

.cat-item.active {
  transform: scale(1.1);
}

.cat-placeholder {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

.cat-face {
  font-size: 60rpx;
}

.footer {
  margin-top: auto;
  margin-bottom: 100rpx;
}

.hint-text {
  font-size: 28rpx;
  color: #888;
}

/* Walking Cat Animation */
.walking-cat-container {
  position: fixed;
  width: 200rpx;
  height: 200rpx;
  z-index: 999;
  transition: all 1s ease-in-out; /* Smooth transition for position and scale */
  pointer-events: none;
  /* Start centered to the container if no pos set, but we set pos inline */
}

.walking-cat-image {
  width: 100%;
  height: 100%;
}
