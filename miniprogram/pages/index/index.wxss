page {
  background-color: #F0FFF0; /* Light Green / Milk Green */
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  padding: 120rpx 40rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
}

.title {
  font-size: 72rpx;
  font-weight: bold;
  color: #1B262C; /* Dark Green/Black */
  letter-spacing: 4rpx;
}

.cats-container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  padding: 0 20rpx;
}

.cat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
  opacity: 0.8;
}

.cat-item.active {
  transform: scale(1.2);
  opacity: 1;
}

.cat-placeholder {
  width: 160rpx;
  height: 240rpx;
  border-radius: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.1);
}

.cat-face {
  font-size: 60rpx;
}

.footer {
  text-align: center;
  margin-bottom: 40rpx;
}

.hint-text {
  font-size: 28rpx;
  color: #4CAF50; /* Accent Green */
  letter-spacing: 2rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { opacity: 0.6; }
  50% { opacity: 1; }
  100% { opacity: 0.6; }
}
