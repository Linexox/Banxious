<view class="container">
  <view class="header">
    <text class="title">蕉个猫绿</text>
  </view>

  <view class="cats-container">
    <block wx:for="{{cats}}" wx:key="id">
      <view 
        class="cat-item {{selectedCatId === item.id ? 'active' : ''}}" 
        bindtap="onSelectCat" 
        data-id="{{item.id}}"
      >
        <!-- Dynamic Cat Image (Idle Animation) -->
        <view class="cat-placeholder" style="background-color: transparent;">
             <image 
                class="cat-image" 
                src="{{idleCatUrl}}" 
                mode="aspectFit"
             ></image>
        </view>
        <!-- <text class="cat-face">🐱</text> -->
      </view>
    </block>
  </view>

  <view class="footer">
    <text class="hint-text">点击一只香蕉猫开始倾听</text>
  </view>

  <!-- Walking Cat Animation Layer -->
  <view 
    class="walking-cat-container" 
    wx:if="{{isAnimating}}"
    style="left: {{catPos.left}}px; top: {{catPos.top}}px; transform: scale({{catScale}});"
  >
    <image 
        class="walking-cat-image" 
        src="{{walkingCatUrl}}" 
        mode="aspectFit"
    ></image>
  </view>
</view>
