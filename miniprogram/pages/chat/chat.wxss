@keyframes floatUp {
  0% { transform: translateY(20rpx); opacity: 0; }
  100% { transform: translateY(0); opacity: 1; }
}

@keyframes typingBounce {
  0%, 60%, 100% { transform: translateY(0); }
  30% { transform: translateY(-10rpx); }
}

/* Base style for chat messages to apply animation */
.chat-message-item {
  animation: floatUp 0.3s ease-out forwards;
}

page {
  background-color: #F0FFF0; /* Light Green */
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

/* --- Progress Bar --- */
.progress-container {
  position: absolute;
  top: 20rpx;
  left: 40rpx;
  right: 40rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.progress-icon-placeholder {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.progress-track {
  flex: 1;
  height: 20rpx;
  background-color: rgba(0,0,0,0.05);
  border-radius: 10rpx;
  margin: 0 20rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #FFEB3B);
  transition: width 0.5s ease;
}

/* --- Mode Switch --- */
.mode-switch-container {
  position: absolute;
  top: 100rpx; /* Below progress bar */
  right: 40rpx;
  width: 180rpx;
  height: 60rpx;
  z-index: 150; /* Above chat list */
  display: flex;
  align-items: center;
  justify-content: center;
}

.mode-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 30rpx;
  border: 1rpx solid rgba(0,0,0,0.1);
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

.mode-slider {
  position: absolute;
  top: 4rpx;
  width: 86rpx; /* Half width - padding */
  height: 52rpx;
  background-color: #4CAF50;
  border-radius: 26rpx;
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.mode-slider.left {
  left: 4rpx;
  background-color: #FFEB3B; /* Humorous color */
}

.mode-slider.right {
  left: 90rpx; /* 180 - 86 - 4 */
  background-color: #4CAF50; /* Professional color */
}

.mode-labels {
  position: relative;
  z-index: 2;
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: space-between;
  padding: 0 16rpx;
  box-sizing: border-box;
}

.mode-text {
  font-size: 28rpx; /* Increased from 24rpx */
  color: #888;
  font-weight: 500;
  transition: color 0.3s;
  flex: 1;
  text-align: center;
}

.mode-text.active {
  color: #333; /* Darker for better contrast on yellow/green */
  font-weight: bold;
}

/* --- Chat Area --- */
.chat-list {
  position: absolute;
  top: 170rpx; /* Adjusted to make room for switch (100 + 60 + 10) */
  left: 0;
  right: 0;
  bottom: 25vh; /* Above cats (head at 1/4 screen) */
  z-index: 100;
  font-family: sans-serif; /* Ensure default font for chat bubbles */
}

.chat-content {
  display: flex;
  flex-direction: column;
  justify-content: flex-end; /* Align content to bottom */
  min-height: 100%;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

/* --- Typing Indicators --- */
.ai-typing-container {
  display: flex;
  justify-content: flex-start;
  padding: 0 20rpx;
  margin-bottom: 10rpx;
  animation: floatUp 0.3s ease-out;
}

.user-typing-layer {
  position: absolute;
  right: 40rpx; /* Moved left 10px (approx 20rpx) from 20rpx */
  bottom: calc(160rpx + env(safe-area-inset-bottom) + 30rpx); /* Moved up 5px (approx 10rpx) from 20rpx */
  z-index: 120;
  animation: floatUp 0.3s ease-out;
}

.typing-bubble {
  background-color: #fff;
  padding: 15rpx 25rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.typing-bubble.left {
  border-radius: 30rpx 30rpx 30rpx 4rpx;
  border: 1rpx solid #eee;
}

.typing-bubble.right {
  background-color: #4CAF50;
  border-radius: 30rpx 30rpx 4rpx 30rpx;
}

.typing-bubble .dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #ccc;
  border-radius: 50%;
  margin: 0 4rpx;
  animation: typingBounce 1.4s infinite ease-in-out both;
}

.typing-bubble.right .dot {
  background-color: rgba(255,255,255,0.8);
}

.typing-bubble .dot:nth-child(1) { animation-delay: -0.32s; }
.typing-bubble .dot:nth-child(2) { animation-delay: -0.16s; }

/* --- Cats --- */
.cats-layer {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 0; /* Container itself shouldn't block clicks */
  z-index: 10; /* Lower z-index to be behind input box */
}

.ai-cat-container {
  position: absolute;
  left: 0;
  bottom: 0; 
  width: 25vh;
  height: 25vh;
  display: flex;
  align-items: flex-end;
  pointer-events: none; 
  /* Flip horizontally and move up 50px (Result of moving down 150px from previous -200px) */
  transform: scaleX(-1) translateY(-50px); 
  transform-origin: center bottom; /* Ensure flip happens around center */
  transition: transform 0.3s ease-in-out;
}

.user-cat-container {
  position: absolute;
  right: 0;
  bottom: 15px; /* Moved up 15px as requested */
  width: 25vh; 
  height: 25vh;
  display: flex;
  flex-direction: row; 
  align-items: flex-end; 
}

.cat-avatar {
  width: 100%;
  height: 100%;
  border-radius: 0;
  background-color: transparent;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  font-size: 50rpx;
  box-shadow: none;
  transition: transform 0.2s;
  pointer-events: auto; 
}

.cat-avatar.ai {
  background-color: transparent; 
}

.cat-avatar.user {
  background-color: transparent; 
}

.cat-avatar.talking {
  animation: bounce 0.5s infinite alternate;
}

.cat-avatar.typing {
  animation: shake 0.2s infinite;
}

@keyframes bounce {
  from { transform: translateY(0); }
  to { transform: translateY(-10rpx); }
}

@keyframes shake {
  0% { transform: rotate(0deg); }
  25% { transform: rotate(5deg); }
  75% { transform: rotate(-5deg); }
  100% { transform: rotate(0deg); }
}

/* --- Suggestions Layer --- */
.suggestions-layer {
  display: flex;
  flex-direction: column; /* Stack naturally */
  align-items: flex-end; /* Right align */
  width: 100%;
  padding: 10rpx 0;
  box-sizing: border-box;
  /* Removed absolute positioning to keep in flow */
}

.suggestion-bubble {
  background-color: #fff;
  border: 2rpx solid #4CAF50;
  color: #333;
  padding: 12rpx 24rpx;
  border-radius: 30rpx 30rpx 4rpx 30rpx; 
  margin-bottom: 15rpx;
  font-size: 26rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.05);
  max-width: 300rpx;
  word-wrap: break-word;
  animation: popIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  transform-origin: bottom right;
}

@keyframes popIn {
  0% { transform: scale(0); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}

.input-area {
  /* Fix input area to bottom */
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 130;
}

/* --- Card Entry Styles (Restored) --- */
.card-entry-wrapper {
  position: fixed;
  top: 100rpx; /* Aligned below progress bar */
  left: 40rpx; /* Aligned left */
  z-index: 200; /* High z-index */
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(5px);
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.2);
  display: flex;
  align-items: center;
  border: 2rpx solid #E8F5E9;
  overflow: hidden;
  
  opacity: 0;
  transform: translateX(-100rpx) scale(0.9); /* Changed animation direction from left */
  pointer-events: none;
  transition: all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.card-entry-wrapper.show {
  opacity: 1;
  transform: translateX(0) scale(1);
  pointer-events: auto;
}

.card-entry-wrapper:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.15);
}

.card-entry-content {
  display: flex;
  align-items: center;
  gap: 12rpx;
  position: relative;
  z-index: 2;
}

.card-icon {
  width: 32rpx;
  height: 24rpx;
  background-color: #FFEB3B;
  border-radius: 4rpx;
  position: relative;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.card-body {
  width: 24rpx;
  height: 2rpx;
  background-color: rgba(0,0,0,0.1);
  position: absolute;
  top: 8rpx;
  left: 4rpx;
}

.card-entry-content text {
  font-size: 28rpx; /* Increased from 26rpx */
  color: #2E7D32;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.card-entry-close {
  margin-left: 16rpx;
  color: #A5D6A7;
  font-size: 32rpx;
  line-height: 1;
  padding: 4rpx;
  margin-right: -8rpx;
}

.card-entry-shine {
  position: absolute;
  top: 0;
  left: -100%;
  width: 50%;
  height: 100%;
  background: linear-gradient(
    to right,
    rgba(255,255,255,0) 0%,
    rgba(255,255,255,0.8) 50%,
    rgba(255,255,255,0) 100%
  );
  transform: skewX(-25deg);
  animation: shine 3s infinite;
  pointer-events: none;
}

@keyframes shine {
  0% { left: -100%; }
  20% { left: 200%; }
  100% { left: 200%; }
}

/* --- Asset & Animation Styles --- */
.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: block;
}

.card-entry-image {
  width: 40rpx;
  height: 40rpx;
  display: block;
}
