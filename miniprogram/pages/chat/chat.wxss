page {
  background-color: #FFFDF5;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.mode-switch {
  display: flex;
  justify-content: center;
  padding: 20rpx;
  background-color: #FFFDF5;
  z-index: 99;
}

.mode-btn {
  padding: 10rpx 30rpx;
  margin: 0 10rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #eee;
  transition: all 0.3s;
}

.mode-btn.active {
  background-color: #F8E71C;
  color: #333;
  font-weight: bold;
  box-shadow: 0 2rpx 10rpx rgba(248, 231, 28, 0.3);
}

.chat-list {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.loading {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 20rpx;
}

.input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  z-index: 100;
  border-top: 1rpx solid #eee; /* 增加顶部边框 */
  padding-bottom: env(safe-area-inset-bottom); /* 适配全面屏底部 */
}

.generate-btn {
  position: fixed;
  top: 20rpx;
  right: 20rpx;
  background-color: #00FFCC; /* Use a different color to distinguish */
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #333;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
  z-index: 99;
}

.suggestions-area {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-end;
    padding: 10rpx 20rpx;
    margin-bottom: 20rpx;
}

.suggestion-chip {
    background-color: #FFF;
    border: 2rpx solid #F8E71C;
    border-radius: 30rpx;
    padding: 10rpx 24rpx;
    margin: 8rpx;
    font-size: 26rpx;
    color: #333;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
    transition: all 0.2s;
}

.suggestion-chip:active {
    background-color: #F8E71C;
    transform: scale(0.95);
}
