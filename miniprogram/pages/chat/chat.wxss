@keyframes floatUp {
  0% { transform: translateY(20rpx); opacity: 0; }
  100% { transform: translateY(0); opacity: 1; }
}

@keyframes typingBounce {
  0%, 60%, 100% { transform: translateY(0); }
  30% { transform: translateY(-10rpx); }
}

/* Base style for chat messages to apply animation */
.chat-message-item {
  animation: floatUp 0.3s ease-out forwards;
}

page {
  background-color: #F0FFF0; /* Light Green */
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

/* --- Progress Bar --- */
.progress-container {
  position: absolute;
  top: 20rpx;
  left: 40rpx;
  right: 40rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.progress-icon-placeholder {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.progress-track {
  flex: 1;
  height: 20rpx;
  background-color: rgba(0,0,0,0.05);
  border-radius: 10rpx;
  margin: 0 20rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #FFEB3B);
  transition: width 0.5s ease;
}

/* --- Chat Area --- */
.chat-list {
  position: absolute;
  top: 100rpx; /* Below progress bar */
  left: 0;
  right: 0;
  bottom: calc(160rpx + env(safe-area-inset-bottom) + 40rpx); /* Above cats (height 160 + safe + gap) */
  /* This ensures the scroll area ends exactly where cats begin */
  z-index: 100;
}

.chat-content {
  display: flex;
  flex-direction: column;
  justify-content: flex-end; /* Align content to bottom */
  min-height: 100%;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

/* --- Typing Indicators --- */
.ai-typing-container {
  display: flex;
  justify-content: flex-start;
  padding: 0 20rpx;
  margin-bottom: 10rpx;
  animation: floatUp 0.3s ease-out;
}

.user-typing-layer {
  position: absolute;
  right: 20rpx;
  bottom: calc(160rpx + env(safe-area-inset-bottom) + 20rpx);
  z-index: 120;
  animation: floatUp 0.3s ease-out;
}

.typing-bubble {
  background-color: #fff;
  padding: 15rpx 25rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.typing-bubble.left {
  border-radius: 30rpx 30rpx 30rpx 4rpx;
  border: 1rpx solid #eee;
}

.typing-bubble.right {
  background-color: #4CAF50;
  border-radius: 30rpx 30rpx 4rpx 30rpx;
}

.typing-bubble .dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #ccc;
  border-radius: 50%;
  margin: 0 4rpx;
  animation: typingBounce 1.4s infinite ease-in-out both;
}

.typing-bubble.right .dot {
  background-color: rgba(255,255,255,0.8);
}

.typing-bubble .dot:nth-child(1) { animation-delay: -0.32s; }
.typing-bubble .dot:nth-child(2) { animation-delay: -0.16s; }

/* --- Cats --- */
.cats-layer {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 0; /* Container itself shouldn't block clicks */
  z-index: 150; /* Highest z-index to be above input box */
}

.ai-cat-container {
  position: absolute;
  left: 20rpx;
  bottom: calc(120rpx + env(safe-area-inset-bottom)); 
  width: 120rpx;
  height: 160rpx;
  display: flex;
  align-items: flex-end;
  pointer-events: none; 
}

.user-cat-container {
  position: absolute;
  right: 20rpx;
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  width: auto; 
  height: auto;
  display: flex;
  flex-direction: row; 
  align-items: flex-end; 
}

.cat-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
  transition: transform 0.2s;
  pointer-events: auto; 
}

.cat-avatar.ai {
  background-color: #FFEB3B; 
}

.cat-avatar.user {
  background-color: #4CAF50; 
}

.cat-avatar.talking {
  animation: bounce 0.5s infinite alternate;
}

.cat-avatar.typing {
  animation: shake 0.2s infinite;
}

@keyframes bounce {
  from { transform: translateY(0); }
  to { transform: translateY(-10rpx); }
}

@keyframes shake {
  0% { transform: rotate(0deg); }
  25% { transform: rotate(5deg); }
  75% { transform: rotate(-5deg); }
  100% { transform: rotate(0deg); }
}

/* --- Suggestions Layer --- */
.suggestions-layer {
  display: flex;
  flex-direction: column; /* Stack naturally */
  align-items: flex-end; /* Right align */
  width: 100%;
  padding: 10rpx 0;
  box-sizing: border-box;
  /* Removed absolute positioning to keep in flow */
}

.suggestion-bubble {
  background-color: #fff;
  border: 2rpx solid #4CAF50;
  color: #333;
  padding: 12rpx 24rpx;
  border-radius: 30rpx 30rpx 4rpx 30rpx; 
  margin-bottom: 15rpx;
  font-size: 26rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.05);
  max-width: 300rpx;
  word-wrap: break-word;
  animation: popIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  transform-origin: bottom right;
}

@keyframes popIn {
  0% { transform: scale(0); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}

.input-area {
  /* Fix input area to bottom */
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 130;
}
