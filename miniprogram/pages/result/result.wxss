page {
  background-color: #1B262C;
  /* Night Mode Background */
  height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.loading-text {
  color: #00FFCC;
  font-size: 32rpx;
  animation: pulse 1.5s infinite;
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.error-text {
  color: #FF6B6B;
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.retry-btn {
  background-color: #00FFCC;
  color: #1B262C;
  font-size: 28rpx;
  padding: 10rpx 40rpx;
  border-radius: 30rpx;
}

/* 3D Flip Container */
.card-container {
  width: 80%;
  aspect-ratio: 3/4;
  perspective: 2000rpx;
  /* 增加透视感 */
  margin-bottom: 40rpx;
  position: relative;
}

.destroy-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  pointer-events: none;
}

.card-flipper {
  position: relative;
  width: 100%;
  height: 100%;
  transition: transform 0.8s;
  transform-style: preserve-3d;
}

.card-flipper.flipped {
  transform: rotateY(180deg);
}

.card-flipper.destroyed {
  transform: scale(0.1) rotate(720deg);
  opacity: 0;
  transition: all 1s;
}

/* Common Card Styles */
.card {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  /* 隐藏背面 */
  background-color: #FFF;
  border-radius: 20rpx;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-shadow: 0 0 40rpx rgba(0, 255, 204, 0.2);
  border: 4rpx solid #00FFCC;
}

/* Front Face */
.card-front {
  z-index: 2;
  transform: rotateY(0deg);
}

/* Back Face */
.card-back {
  transform: rotateY(180deg);
  background-color: #F0FFF0;
  /* 略微不同的背景色区分 */
}

.card-header {
  text-align: right;
}

.tag {
  background-color: #00FFCC;
  color: #1B262C;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-weight: bold;
  font-size: 28rpx;
}

.card-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* 居中内容 */
}

/* Front Content */
.encouragement {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
  line-height: 1.4;
  margin-bottom: 40rpx;
}

.hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

/* Back Content */
.suggestion-list {
  width: 100%;
  text-align: left;
}

.suggestion-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  color: #555;
  line-height: 1.5;
}

.bullet {
  color: #00FFCC;
  margin-right: 15rpx;
  font-weight: bold;
}

.card-footer {
  text-align: center;
  font-style: italic;
  color: #999;
  font-size: 24rpx;
  margin-top: 20rpx;
}

.action-area {
  margin-top: 20rpx;
  width: 100%;
}

.destroy-options {
  display: flex;
  justify-content: space-around;
  width: 80%;
  margin: 0 auto;
}

.destroy-btn-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.destroy-icon-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-bottom: 10rpx;
  transition: all 0.3s;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.destroy-icon-btn:active {
  transform: scale(0.9);
  background-color: rgba(255, 255, 255, 0.2);
}

.destroy-icon-btn.tear {
  color: #FFF;
}

.destroy-icon-btn.burn {
  color: #FF5722;
}

.destroy-icon-btn.crush {
  color: #00FFCC;
}

.destroy-label {
  color: #CCC;
  font-size: 24rpx;
}

@keyframes pulse {
  0% {
    opacity: 0.6;
  }

  50% {
    opacity: 1;
  }

  100% {
    opacity: 0.6;
  }
}

@keyframes shake {

  0%,
  100% {
    transform: translateX(0);
  }

  10%,
  30%,
  50%,
  70%,
  90% {
    transform: translateX(-2rpx);
  }

  20%,
  40%,
  60%,
  80% {
    transform: translateX(2rpx);
  }
}

.ashes {
  position: absolute;
  font-size: 60rpx;
  animation: fadeOut 2s forwards;
}

@keyframes fadeOut {
  from {
    opacity: 1;
    transform: translateY(0);
  }

  to {
    opacity: 0;
    transform: translateY(-50rpx);
  }
}